{{> navbar}}
<div class="container mt-3">
  <header class="my-4">
    <h1>Edit Task</h1>
    <hr>
  </header>
</div>

<form class="form-inline" action="{{this.id}}/makechanges" method="POST">
  <div class="container px-5">
    <input  name="content" class="form-control form-control-lg bg-dark text-white border-dark"
      placeholder="Enter tasks here" value="{{content}}">
  </div>

  <div class="d-flex justify-content-center py-3 mt-1 mb-5">
    <button class="btn btn-outline-light btn-lg">
        Edit
    </button>
    <a href="/" class="btn btn-outline-light btn-lg mx-4">Go back</a>
  </div>
</form>