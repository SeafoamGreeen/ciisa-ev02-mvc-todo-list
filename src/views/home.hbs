{{> navbar}}
<div class="container mt-3">
  <header class="my-4">
    <h1>Create a tasks list with <p class="text-white d-inline">TODO-ER</p></h1>
    <hr>
  </header>
</div>

<form class="form-inline" action="/" method="POST">
  <div class="container px-5">
    <input name="content" class="form-control form-control-lg bg-dark text-white border-dark" type="text"
      placeholder="Enter tasks here">
  </div>

  <div class="d-flex justify-content-center py-3 mt-1 mb-5">
    <button type="submit" class="btn btn-outline-light btn-lg">
      Add
    </button>
  </div>
</form>


{{#unless tasks}}
<div class="container mt-3">
  <h3>There's no tasks left!</h3>
</div>

<div class="d-flex justify-content-center">
  <i class="bi bi-emoji-sunglasses" style="font-size: 15rem;"></i>
</div>
{{/unless}}

{{#each tasks}}
<div class="container">
  <div class="card border-dark bg-dark mb-3 mx-3">
    <div class="card-body d-flex justify-content-between">
      <h5 class="card-title px-2">{{this.content}}</h5>
      <div>
        
        <form action="/delete/{{this.id}}" method="post">
          <a href="/edit/{{this.id}}" class="btn btn-outline-light mx-2">Edit</a>
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}